{
  "compilerOptions": {
    "outDir": "./dist",            // Directory to output the compiled files
    "rootDir": "./src",            // Root directory of your TypeScript source files
    "target": "es2017",            // ECMAScript target version
    "module": "commonjs",          // Module system to use
    "declaration": true,           // Generates .d.ts files
    "strict": true,                // Enable all strict type-checking options
    "esModuleInterop": true,       // Ensures interoperability between CommonJS and ES modules
    "skipLibCheck": true,          // Skips type checking of declaration files
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
